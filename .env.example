# ============================================================
# üß± APPLICATION CONFIG
# ============================================================
APP_NAME=WaterBilling
APP_ENV=local
APP_KEY=           # ‚Üê run `php artisan key:generate`
APP_DEBUG=true
APP_URL=http://localhost:9000
VITE_DEV_SERVER_URL=http://localhost:5173

# ============================================================
# üßæ LOGGING
# ============================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================
# üóÑÔ∏è DATABASE
# ============================================================
DB_CONNECTION=mysql
DB_HOST=water_billing_db
DB_PORT=3306
DB_DATABASE=water_billing
DB_USERNAME=laravel
DB_PASSWORD=secret

# ============================================================
# ‚ö° CACHE / SESSION / QUEUE
# ============================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ============================================================
# üß∞ REDIS (optional, if enabled)
# ============================================================
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================
# üì¨ MAIL CONFIG (Mailpit)
# ============================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=waterbilling@local.test
MAIL_FROM_NAME="${APP_NAME}"

# Mailpit UI ‚Üí http://localhost:8025

# ============================================================
# ‚òÅÔ∏è AWS (optional placeholders)
# ============================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================
# üîî PUSHER (optional placeholders)
# ============================================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ============================================================
# üí° NOTES
# ============================================================
# - Copy this file to `.env` before starting local development.
# - Run `composer install && php artisan key:generate`
# - Start environment: `docker-compose up -d`
# - Access app:       http://localhost:9000
# - Access Mailpit UI: http://localhost:8025
# - Access PhpMyAdmin: http://localhost:8080
# - DB connection:    Host `127.0.0.1`, Port `3307` (from host perspective)


